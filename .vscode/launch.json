{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest: Current File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "jest.config.js",
                "--runInBand",
                "--no-cache",
                "${fileBasename}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest: All Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "jest.config.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        }
    ]
}